{

    "apps": [
        {
            "name": "boiler",
            "script": "bin/www",
            "instances": 4,
            "exec_mode"  : "cluster_mode",
            "error_file": "err.log",
            "out_file": "out.log",
            "out_file": "out-env.log",
            "merge-logs": true,
            "watch": true,
            "autorestart": true,
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],

    "deploy": {
        "production": {
            "user": "username",
            "host": "0.0.0.0",
            "ref": "origin/master",
            "repo": "git@github.com:jayoharedee/express-boiler.git",
            "path": " /var/www/boiler",
            "post-deploy": "sudo npm install && sudo pm2 startOrRestart ecosystem.json --env production"
        }
    }
}
